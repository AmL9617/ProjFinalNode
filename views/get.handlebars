
<header class="masthead">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form id="search-form" class="form-inline d-flex justify-content-center" action="/pessoas/get" method="GET">
                    <div class="form-group mr-2 flex-grow-1">
                        <input type="text" class="form-control w-100" id="pessoa" name="pessoa" placeholder="Digite a pessoa que está buscando">
                    </div>
                    <button type="submit" class="btn btn-primary">Procurar</button>
                </form>
            </div>
        </div>
    </div>
    <main>
        <div id="pessoas-container" class="container">
            <div class="row">
                <div class="col-md-12">
                    {{#if search}}
                        <h2 id="titleGet">Pessoas que contém o nome: {{search}}</h2>
                    {{else}}
                    {{/if}}
                    <ul id="pessoa-list" class="list-group">
                        {{#each pessoas}}
                        <li class="list-group-item new-job d-flex justify-content-between align-items-center">
                            <div class="elementGet">
                                <p>{{dataValues.Nome}}</p>
                                <h2>{{dataValues.Endereco}}</h2>
                                <p>{{dataValues.Telefone}}</p>
                            </div>
                            <a class="btn btn-primary ml-auto" href="{{constructUrl dataValues.id}}">Ver pessoa</a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </main>                
</header>